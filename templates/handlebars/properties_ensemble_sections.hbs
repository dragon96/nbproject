<script>
  $("title").html("Sections for {{ensemble.name}}");
</script>
<style>
  span.lowcontrast{
    color: #a0a0a0;
  }
  div.section{
    color: #404040;
  }

  p.error-message {
    margin: 0;
    top: -5px;
    position: relative;
    transition: 0.3s;
    transform: scale(0);
    transform-origin: top left;
  }

  p.error-message:not(:empty) {
    border: 1px solid #C22;
    background-color: #FCC;
    padding: 5px;
    display: inline-block;
    margin-top: 10px;
    transform: scale(1);
  }

  .section-assign {
    border: 2px rgba(0,0,0,0) solid;
    padding: 4px 0 4px 0;
  }

  .section-assign.active {
    border: 2px rgba(32, 255, 32, 1) solid;
  }

  .student-record-helper {
    display: inline-block;
    padding: 6px;
    line-height: 1em;
    font-size: 0.7em;
    color: #555;
    background-color: #EEE;
  }

  .section-assign-space {
    height: 1.5em;
  }

  #create-section-form input {
    font-size: 1em;
  }

  thead,
  tfoot {
    text-align: left;
  }

  .dataTables_wrapper {
    margin-top: 0;
  }

  .listing-filter {
    text-align: left;
    display: inline-block;
  }

  .listing-filter input {
    width: 180px;
  }

  .section-btns-holder {
    text-align: right;
    position: relative;
    top: 19px;
    z-index: 1; /* To ensure it appears on top of the table's div */
    padding-right: 5px;
    margin-left: 200px;
  }

  a.section-btn.button,
  .create-section-btn.button {
    border-radius: 5px;
    margin: 0;
    padding: 2px 5px;
    font-size: 0.9em;
  }

  .create-section-btn.button {
    margin-left: 5px;
  }

  a.create-section-toggle {
    margin: 5px 0 5px 0;
    display: inline-block;
    font-size: 0.9em;
    padding: 2px 5px;
  }

  a.create-section-toggle i,
  a.section-btn i {
    margin-right: 4px;
  }

  .create-section-form {
    transition: 0.3s;
    height: 25px;
    overflow: hidden;
  }

  .create-section-form.hide {
    height: 0;
  }

  .all-sections {
    margin-top: 10px;
  }

  .section-info {
    margin-right: 10px;
    border: 1px solid #ccc;
    padding: 2px 5px 2px 22px;
    background-color: #eee;
    position: relative;
  }

  a.delete-link {
    background-color: transparent;
    padding: 0 5px;
    cursor: pointer;
    color: #999;
    position: absolute;
    transition: 0.3s;
    left: 0;
  }

  a.delete-link:hover,
  a.delete-link:focus {
    color: #555;
    transform: scale(1.3);
    transform-origin: center;
  }

</style>

<h1>Sections for {{ensemble.name}}</h1>
<a class="create-section-toggle button gray" href="#"><i class="fa fa-plus" aria-hidden="true"></i>Create New Section</a>
<form method="POST" action="?action=create" id="create-section-form" class="create-section-form hide">
    <input id="new-section-name" type="text" name="name" value="" placeholder="Section Name"/><input type="submit" class="create-section-btn button blue" value="Create"/>
</form>

<div class='section'>
  <p class="error-message">{{error_message}}</p>
    <div class="all-sections">
      {{#each sections}}
      <span class="section-{{ID}}-info section-info">
        <!-- The action of this link is configured via Javascript -->
        <a href='#' class="delete-link" data-section-id="{{ID}}"><i class="fa fa-trash-o"></i></a>
        {{#if name}}{{name}}{{else}}<span class="lowcontrast">Untitled</span>{{/if}}
      </span>
      {{/each}}
    </div>
</div>

<h1 style="margin-top:30px;">Section Student Listing</h1>
<div class="section-btns-holder">
    <!--<a class="section-btn button gray" href="#"><i class="fa fa-download" aria-hidden="true"></i>Download CSV</a>-->
    <!--<a class="section-btn button gray" href="#"><i class="fa fa-upload" aria-hidden="true"></i>Upload CSV</a>-->
</div>
<table id="listing" class="display">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-mail Address</th>
            <th>Section</th>
            <!-- This column is added to enable filtering by section because this column will contain
            the section as plain text instead of a select element (i.e. dropdown). I couldn't figure out an
            easy way to make the datatable search box work with the select element in the visible Section column
             -->
            <th>Section (Hidden)</th>
        </tr>
    </thead>
    <tbody>
        {{#each class_sections}}
          {{#each participants}}
            <tr data-membership-id="{{membership_id}}">
              <td>{{firstname}}</td>
              <td>{{lastname}}</td>
              <td>{{email}}</td>
              <td>
                <select name="section_id" data-membership-id="{{membership_id}}">
                  <option value="None" {{#unless section}} selected="selected" {{/unless}}>No Section</option>
                  {{#each ../../class_sections}}
                    <option value="{{id}}" {{#equal ../section name}}selected="selected"{{/equal}}>{{#if name}}{{name}}{{else}}Untitled{{/if}}</option>
                  {{/each}}
                </select>
              </td>
              <td>
                {{#if section}}{{section}}{{else}}Untitled{{/if}}
              </td>
            </tr>
          {{/each}}
        {{/each}}
        {{#each no_section.participants}}
            <tr data-membership-id="{{membership_id}}">
              <td>{{firstname}}</td>
              <td>{{lastname}}</td>
              <td>{{email}}</td>
              <td>
                <select name="section_id" data-membership-id="{{membership_id}}">
                  <option value="None" {{#unless section}} selected="selected" {{/unless}}>No Section</option>
                  {{#each ../class_sections}}
                    <option value="{{id}}">{{#if name}}{{name}}{{else}}Untitled{{/if}}</option>
                  {{/each}}
                </select>
              </td>
              <td>
                No Section
              </td>
            </tr>
        {{/each}}
    </tbody>
  </table>
